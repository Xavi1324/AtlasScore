@model EditarMacroindicadorSimulacionViewModel
@{
    ViewData["Title"] = "Editar Peso del Macro";
}

<div class="container mt-4">
    <h2>@ViewData["Title"] - @Model.NombreMacroindicador</h2>
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Peso" class="form-label">Peso</label>
            <input asp-for="Peso" type="number" step="0.01" min="0.01" max="1" class="form-control" />
            <span asp-validation-for="Peso" class="text-danger"></span>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</div>
