@model CrearMacroindicadorSimulacionViewModel
@{
    ViewData["Title"] = "Agregar Macro a Simulación";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="MacroindicadorId" class="form-label">Macroindicador</label>
            <select asp-for="MacroindicadorId" class="form-select">
                <option value="">-- Selecciona un macro --</option>
                @foreach (var m in Model.MacroindicadoresDisponibles)
                {
                    <option value="@m.Id">@m.Nombre</option>
                }
            </select>
            <span asp-validation-for="MacroindicadorId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Peso" class="form-label">Peso</label>
            <input asp-for="Peso" type="number" step="0.01" min="0.01" max="1" class="form-control" />
            <span asp-validation-for="Peso" class="text-danger"></span>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
            <button type="submit" class="btn btn-primary">Agregar</button>
        </div>
    </form>
</div>
