@model MacroindicadorViewModel
@{
    ViewData["Title"] = "Nuevo Macroindicador";
}
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Peso" class="form-label"></label>
            <input asp-for="Peso" class="form-control" step="0.1"  />
            <span asp-validation-for="Peso" class="text-danger"></span>
        </div>
        <div class="form-check mb-3">
            <input asp-for="EsMejorMasAlto" class="form-check-input" />
            <label asp-for="EsMejorMasAlto" class="form-check-label"></label>
        </div>
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
    
</div>
