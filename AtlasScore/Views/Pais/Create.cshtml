@model PaisViewModel
@{
    ViewData["Title"] = "Crear Pais";
    
}

<div class="container mt-4">
    <h2 class="mb-3">@ViewData["Title"]</h2>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CodigoIso" class="form-label"></label>
            <input asp-for="CodigoIso" class="form-control" />
            <span asp-validation-for="CodigoIso" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="PaisIndex" class="btn btn-secondary">Cancelar</a>
    </form>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</div>
