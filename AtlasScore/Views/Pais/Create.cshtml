@model PaisViewModel
@{
    ViewData["Title"] = "Crear Pais";
    
}

<div class="container mt-4">
    <h2>Nuevo Pais</h2>
    <form asp-controller="Pais"  asp-action="Create" method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre:</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CodigoIso" class="form-label">Codigo Iso:</label>
            <input asp-for="CodigoIso" class="form-control" />
            <span asp-validation-for="CodigoIso" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Crear</button>
        <a asp-action="PaisIndex" class="btn btn-secondary">Cancelar</a>
    </form>

</div>
